<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>Zencoder</AssemblyName>
    <VersionPrefix>2.1.0</VersionPrefix>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <LangVersion>8</LangVersion>
    <Nullable>enable</Nullable>
    
    <!-- Package Properties -->
    <Authors>iamcarbon</Authors>
    <Copyright>© 2010 - 2018 Jason Nelson</Copyright>
    <Description>A netstandard client for the Zencoder v2 API.</Description>
    <PackageTags>zencoder async netstandard</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/carbon/Zencoder</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Carbon.Json" Version="2.1.0" />
  </ItemGroup>
  
</Project>