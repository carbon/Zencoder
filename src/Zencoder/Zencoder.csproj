<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>Zencoder</AssemblyName>
    <VersionPrefix>1.9.0</VersionPrefix>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    
    <!-- Package Properties -->
    <Authors>iamcarbon</Authors>
    <Copyright>© 2010 - 2018 Jason Nelson</Copyright>
    <Description>A netstandard client for the Zencoder v2 API.</Description>
    <PackageTags>zencoder async netstandard</PackageTags>
    <PackageLicenseUrl>https://github.com/carbon/Zencoder/blob/master/LICENSE</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/carbon/Zencoder</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Carbon.Json" Version="1.7.0" />
  </ItemGroup>
  
</Project>